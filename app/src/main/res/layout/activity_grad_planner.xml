<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GradPlanner"
    android:background="@drawable/gradient">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textDashboard"
                android:text="My Planner"
                android:textSize="30sp"
                android:textColor="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="50dp"
                android:id="@+id/textItems"
                android:text="Choose an Academic Year"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <GridLayout
            android:layout_marginTop="75dp"
            android:columnCount="2"
            android:rowCount="2"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="6dp"
                app:cardCornerRadius="12dp"
                android:layout_margin="12dp">


                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center"
                    android:clickable="true"
                    android:onClick="firstYear"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:src="@drawable/number"
                        android:layout_width="80dp"
                        android:layout_height="80dp" />

                    <Button
                    android:id="@+id/firstyear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="firstYear"
                    android:text="2016-2017"
                    android:textSize="20sp" />
                </LinearLayout>



            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="6dp"
                app:cardCornerRadius="12dp"
                android:layout_margin="12dp">


                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center"
                    android:clickable="true"
                    android:onClick="secondYear"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:src="@drawable/numbertwo"
                        android:layout_width="80dp"
                        android:layout_height="80dp" />
                    <Button
                    android:id="@+id/secondyear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="secondYear"
                    android:text="2017-2018"
                    android:textSize="20sp" />
                </LinearLayout>
            </android.support.v7.widget.CardView>




            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="6dp"
                app:cardCornerRadius="12dp"
                android:layout_margin="12dp">


                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center"
                    android:clickable="true"
                    android:onClick="thirdYear"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:src="@drawable/numberthree"
                        android:layout_width="80dp"
                        android:layout_height="80dp" />

                    <Button
                    android:id="@+id/thirdyear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2018-2019"
                    android:textSize="20sp"
                    android:onClick="thirdYear" />
                </LinearLayout>



            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="6dp"
                app:cardCornerRadius="12dp"
                android:layout_margin="12dp">


                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center"
                    android:clickable="true"
                    android:onClick="fourthYear"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:src="@drawable/numberfour"
                        android:layout_width="80dp"
                        android:layout_height="80dp" />
                    <Button
                    android:id="@+id/fourthYear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2019-2020"
                    android:onClick="fourthYear"
                    android:textSize="20sp" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </GridLayout>


    </LinearLayout>


